{
  "manifest_version": 3,
  "name": "Privacy Policy Analyzer Pro",
  "version": "1.0.0",
  "description": "Analyzes privacy policies using AI, provides summaries, and identifies potential risks",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_title": "Analyze Privacy Policy"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/privacy-content.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}